/* pages/sort/sort.wxss */


.scro2{
  margin-top: 20rpx;
  white-space: nowrap;
  height: 100rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  }
  
  .scro2 view{
  font-size: 30rpx;
   display: inline-block;
  margin-left: 50rpx;
  margin-right: 50rpx;
  height: 99rpx;
  line-height: 99rpx;
  }
  
  .scro2 view:hover{
    font-size: 50rpx;
    border-bottom: rgb(164, 216, 148) solid 20rpx;
  }
  
.wrap{
  background-color:  rgb(176, 202, 168);
}

  .wrap .wrapitem{
    display: flex;
   
    width: 100%;
    margin: 0rpx auto 20rpx auto;
   background-color: rgb(255, 255, 255);
   border-radius: 15rpx;
  }

.wrap .wrapitem image{

width: 40%;
border-radius: 15rpx 0rpx 0rpx 15rpx;
}


  .wraptext{
    display: flex;
    flex-direction: column;
   
    font-size: 30rpx;
    width:56%;
    margin-left: 3%;
    justify-content: space-around;
  }

  .wraptext .name{
    font-size: 40rpx;
    font-weight: 700;
  }
